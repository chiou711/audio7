<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audioGroup"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="end"
    android:visibility="gone"
    android:orientation="vertical" >
    <!-- note view audio title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/audio_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pager_audio_title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorBlack"
            android:gravity="center"
            android:text="title"
            android:textSize="13sp"
            android:textStyle="bold"
            android:singleLine="false"
            android:maxLines="3"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <TextView
            android:id="@+id/pager_audio_artist"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorBlack"
            android:gravity="center"
            android:text="title"
            android:textSize="12sp"
            android:textStyle="italic"
            android:singleLine="false"
            android:maxLines="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    </LinearLayout>

    <!-- start: note view audio control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:background="@drawable/audio_bg"
        android:baselineAligned="false"
        android:layout_margin="0dp"
        android:orientation="vertical" >

        <!-- pager audio seek bar -->
        <SeekBar
            android:id="@+id/pager_img_audio_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:progressDrawable="@drawable/progress"
            android:thumb="@drawable/thumb"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            <!-- current playing time-->
            <TextView
                android:id="@+id/pager_audio_current_pos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:text="left"
                android:textSize="12sp"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:singleLine="true" />
            <!-- playing button-->
            <ImageView
                android:id="@+id/pager_btn_audio_play"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/button" />
            <!-- total file length-->
            <TextView
                android:id="@+id/pager_audio_file_length"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp"
                android:text="right"
                android:textSize="12sp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/audioPanel_previous"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                />
            <ImageView
                android:id="@+id/audioPanel_next"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="65dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button" />
        </LinearLayout>

    </LinearLayout>
    <!-- end: note view audio control -->

</LinearLayout>