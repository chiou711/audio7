<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<ProgressBar
		android:id="@+id/add_all_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_gravity="center"
		android:visibility="invisible" />

	<TextView
		android:id="@+id/add_all_message"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:textSize="22sp"
		android:textStyle="bold"
		android:gravity="center"
		android:paddingLeft="3dp"
		android:paddingStart="3dp"
		tools:ignore="RtlSymmetry" />

	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />
			
	<LinearLayout
		android:id="@+id/view_back_btn_bg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/bar_color"
		android:gravity="center_horizontal">
	<Button
		android:id="@+id/view_back"
		android:layout_width="120dp"
	    android:layout_height="wrap_content"
		android:text="@string/view_note_button_back"
		android:background="@drawable/button"
		android:layout_margin="5dp"
		android:textColor="@android:color/white" />
	<Button
		android:id="@+id/view_add_all"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:text="@string/btn_Renew"
		android:background="@drawable/button"
		android:layout_margin="5dp"
		android:textColor="@android:color/white" />
	</LinearLayout>
</LinearLayout>